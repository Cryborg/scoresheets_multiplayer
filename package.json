{
  "name": "scoresheets-multiplayer",
  "version": "1.0.0",
  "private": true,
  "description": "Multiplayer real-time scoresheets for card and dice games",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:clean": "rm -rf .next && rm -rf node_modules/.cache && next dev --turbopack",
    "dev:watch": "nodemon",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "eslint src/ --ext .ts,.tsx --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "quality": "npm run lint:strict && npm run typecheck && npm run test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns='(hooks|components|lib).*\\.test\\.(ts|tsx)$'",
    "test:integration": "jest --testPathPatterns='api.*\\.test\\.(ts|tsx)$'",
    "test:e2e": "jest --testPathPatterns='e2e.*\\.test\\.(ts|tsx)$'",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "dependencies": {
    "@libsql/client": "^0.15.10",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "next": "15.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}